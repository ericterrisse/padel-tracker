// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  // Relations for matches
  team1Matches Match[] @relation("Team1Players")
  team2Matches Match[] @relation("Team2Players")
}

model Match {
  id         String   @id @default(cuid())
  date       DateTime @default(now())
  sets       String // JSON array of sets: [{"team1": 6, "team2": 4}, {"team1": 6, "team2": 3}]
  setsTeam1  Int // Number of sets won by team 1
  setsTeam2  Int // Number of sets won by team 2
  gamesTeam1 Int // Total games won by team 1
  gamesTeam2 Int // Total games won by team 2
  createdAt  DateTime @default(now())

  // Team 1 players (2 players)
  team1Players Player[] @relation("Team1Players")

  // Team 2 players (2 players)
  team2Players Player[] @relation("Team2Players")
}
